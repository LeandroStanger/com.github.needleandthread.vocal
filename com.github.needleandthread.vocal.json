{
	"app-id": "com.github.needleandthread.vocal",
	"runtime": "org.gnome.Platform",
	"runtime-version": "3.26",
	"sdk": "org.gnome.Sdk",
	"command": "com.github.needle-and-thread.vocal",
	"rename-icon": "com.github.needle-and-thread.vocal",
	"rename-desktop-file": "com.github.needle-and-thread.vocal.desktop",
	"rename-appdata-file": "com.github.needle-and-thread.vocal.appdata.xml",
	"finish-args": [
		"--socket=wayland",
		"--socket=x11",
		"--socket=pulseaudio",
		
		"--share=network",
		"--share=ipc",
		
		"--device=dri",

		"--env=DCONF_USER_CONFIG_DIR=.config/dconf",
		
		"--own-name=com.github.needle-and-thread.vocal",

		"--talk-name=org.gtk.vfs",
		"--talk-name=org.gtk.vfs.*",
		"--talk-name=ca.desrt.dconf",
		"--talk-name=org.freedesktop.secrets",
		"--talk-name=org.freedesktop.Notifications",
		"--talk-name=org.gnome.SettingsDaemon",
		"--talk-name=org.mate.SettingsDaemon",

		"--filesystem=/tmp",
		"--filesystem=home",
		"--filesystem=xdg-config/dconf:ro",
		"--filesystem=xdg-run/dconf",
		"--filesystem=xdg-data/vocal:create"
	],
	"build-options": {
		"cflags": "-O2",
		"cxxflags": "-O2"
	},
	"cleanup": [
		"/bin/granite-demo",
		"/include",
		"/lib/pkgconfig",
		"/lib/debug",
		"/share/vala",
		"/man",
		"*.a",
		"*.la"
	],
	"modules": [
		{
			"name": "libopus",
			"sources": [
				{
					"type":"archive",
					"url": "https://archive.mozilla.org/pub/opus/opus-1.2.1.tar.gz",
					"sha256": "cfafd339ccd9c5ef8d6ab15d7e1a412c054bf4cb4ecbbbcc78c12ef2def70732"
				}
			]
		},
		{
			"name": "ffmpeg",
			"cleanup": [ "/include", "/lib/pkgconfig", "/share" ],
			"config-opts": [
				"--disable-all",
				"--enable-shared",
				"--disable-static",
				"--enable-gnutls",
				"--enable-avfilter",
				"--enable-avcodec",
				"--enable-avformat",
				"--enable-swscale",
				"--enable-decoder=mp3",
				"--enable-decoder=h264",
				"--enable-libopus"
			],
			"sources": [
				{
					"type": "archive",
					"url": "https://ffmpeg.org/releases/ffmpeg-3.4.1.tar.xz",
					"sha256": "5a77278a63741efa74e26bf197b9bb09ac6381b9757391b922407210f0f991c0"
				}
			]
		},
		{
			"name": "gst-libav",
			"config-opts": [ "--disable-doc", "--disable-gtk-doc", "--with-system-libav" ],
			"cleanup": [ "*.la", "/share/gtk-doc" ],
			"sources": [
				{
					"type": "archive",
					"url": "https://gstreamer.freedesktop.org/src/gst-libav/gst-libav-1.12.4.tar.xz",
					"sha256": "2a56aa5d2d8cd912f2bce17f174713d2c417ca298f1f9c28ee66d4aa1e1d9e62"
				}
			]
		},
		{
			"name": "libgee",
			"build-options": {
				"env": {
					"PKG_CONFIG_GOBJECT_INTROSPECTION_1_0_GIRDIR": "/app/share/gir-1.0",
					"PKG_CONFIG_GOBJECT_INTROSPECTION_1_0_TYPELIBDIR": "/app/lib/girepository-1.0"
				}
			},
			"sources": [
				{
					"type":"archive",
					"url": "https://github.com/GNOME/libgee/archive/0.20.0.tar.gz",
					"sha256": "42fe6d651910cb8b720167f71c5255a1b7b1afc82fecd3f31e61f9602b3b1335"
				}
			]
		},
		{
			"name": "granite",
			"buildsystem": "cmake",
			"config-opts": ["-DCMAKE_BUILD_TYPE=Release", "-DCMAKE_INSTALL_PREFIX=/app", "-DCMAKE_INSTALL_LIBDIR=/app/lib"],
			"build-options": {
				"env": {
					"PKG_CONFIG_GOBJECT_INTROSPECTION_1_0_GIRDIR": "/app/share/gir-1.0",
					"PKG_CONFIG_GOBJECT_INTROSPECTION_1_0_TYPELIBDIR": "/app/lib/girepository-1.0"
				}
			},
			"sources": [
				{
					"type":"archive",
					"url": "https://github.com/elementary/granite/archive/0.5.tar.gz",
					"sha256": "cc4905ae70fddeba3d2ded44bb642be77d419aa090251a7ab24c155b8616be06"
				}
			]
		},
		{
			"name": "vocal",
			"buildsystem": "cmake",
			"sources": [
				{
					"type": "archive",
					"url": "https://github.com/needle-and-thread/vocal/archive/2.1.6.tar.gz",
					"sha256": "554f88cef53975e8d4b7c61525e0068b21af2ba76f1e81080d2650e895958acf"
				},
				{
					"type": "patch",
					"path": "about-icon.patch"
				}
			]
		}
	]
}
